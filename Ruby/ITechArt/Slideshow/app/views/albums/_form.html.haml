= form_for @album, :html => {:multipart => true} do |f|
  .field
    = f.label :title, :class => 'control-label'
    = f.text_field :title, :class => 'text_field'
  .field
    = f.label :description, :class => 'control-label'
    = f.text_field :description, :class => 'text_field'
  .field
    = f.label :visibility
    %br/
    = f.collection_select :visibility, Album::VISIBILITY, :to_s, lambda{|i| i.to_s.humanize}
  .field
    %p
      %b Category
      = f.collection_select :category_id, Category.all, :id, :category_title, :prompt => "Select one"
  %p
    %b Photos
  %p
    There are #{@album.photos.count} photos.
  - @album.photos.each do |photo|
    = link_to image_tag(photo.image.thumb.url), photo
    %p
      = link_to 'Destroy', photo, :remote=>true, :method => :delete
  %p
    %b Add Photo
  = file_field_tag "images[]", type: :file, multiple: true,  :class => "btn btn-default"
  - if @album.errors.any?
    #error_explanation
      %h2= "#{pluralize(@album.errors.count, "error")} prohibited this album from being saved:"
      %ul
        - @album.errors.full_messages.each do |msg|
          %li= msg

  .actions
    = f.submit 'Save', :class => "btn btn-default"
